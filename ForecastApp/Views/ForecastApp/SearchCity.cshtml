@model ForecastApp.Models.SearchCity

@{
    ViewData["Title"] = "SearchCity";
}

<div class="container text-center flex-column justify-content-center" style="width: 600px;">

    <form method="post">

        <div class="container">
            <div class="form-group col-md-offset-3 col-md-12 mb-3">
                <h2>Search the forecast in a city</h2>
                <label asp-for="CityName" style="font-family: Arial"></label>
                <input asp-for="CityName" class="form-control" />
                <span asp-validation-for="CityName" class="text-danger"></span>
            </div>
        </div>
        <div class="container">
            <div class="form-group col-md-offset-3 col-md-12">
                <button asp-controller="ForecastApp" asp-action="SearchCity" class="btn btn-primary">Search</button>
            </div>
        </div>
    </form>

</div>
